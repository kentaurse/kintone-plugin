{
  "name": "garsche_notification",
  "version": "0.1.0",
  "scripts": {
    "start": "node scripts/npm-start.js",
    "develop": "npm run build-ts && npm run build -- --exclude=dist/*",
    "build": "esbuild src/ts/desktop.ts --bundle --outdir=dist --platform=browser --format=esm && kintone-plugin-packer --ppk private.ppk --out dist/plugin.zip . --exclude=dist/*",
    "lint": "eslint src",
    "build-ts": "tsc",
    "upload": "kintone-plugin-uploader dist/plugin.zip --watch --waiting-dialog-ms 3000",
    "test": "jest"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^23.0.0",
    "@kintone/plugin-packer": "^8.0.6",
    "@kintone/plugin-uploader": "^9.1.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.0",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}