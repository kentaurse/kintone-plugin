{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["./src/ts/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*", "ts/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
